<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <!-- 상단 취소 및 저장 버튼 -->
    <TextView
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:layout_alignParentStart="true"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:layout_alignParentEnd="true"
        android:padding="16dp"/>

    <!-- 시간 선택 NumberPicker -->
    <LinearLayout
        android:id="@+id/timePickerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/buttonSave"
        android:gravity="center"
        android:padding="16dp">

        <NumberPicker
            android:id="@+id/hourPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <NumberPicker
            android:id="@+id/minutePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <NumberPicker
            android:id="@+id/ampmPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- 반복 선택 -->
    <TextView
        android:id="@+id/repeatOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="반복"
        android:padding="16dp"
        android:background="@android:color/darker_gray"
        android:clickable="true"
        android:layout_below="@id/timePickerContainer"/>

    <!-- 이름 입력 -->
    <LinearLayout
        android:id="@+id/nameContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/repeatOption">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:layout_weight="1"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/editAlarmName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Alarm"
            android:padding="16dp"
            android:inputType="text"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!-- 사운드 선택 -->
    <TextView
        android:id="@+id/alarmSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사운드"
        android:padding="16dp"
        android:background="@android:color/darker_gray"
        android:clickable="true"
        android:layout_below="@id/nameContainer"/>

    <!-- 알람 삭제 버튼 -->
    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="알람 삭제하기"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>

