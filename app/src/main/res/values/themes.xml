<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookMemo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_1</item>
        <item name="colorPrimaryVariant">@color/orange_1</item>
        <item name="colorOnPrimary">@color/orange_1</item>
        <item name="colorSecondary">@color/orange_5</item>
        <item name="colorSecondaryVariant">@color/orange_5</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/gray_1</item>
        <item name="android:statusBarColor">@color/orange_5</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/TextViewStyle</item>
        <item name="android:checkboxStyle">@style/TextViewStyle</item>

    </style>

    <style name="HiddenTextStyle">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CustomCalendarWeekDayText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomCalendarDateText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="TextViewStyle" parend="@android:style/Widget.DeviceDefault">
        <item name="android:fontFamily">@font/suite</item>
    </style>

    <style name="ButtonStyle" parend="@android:style/Widget.DeviceDefault">
        <item name="android:fontFamily">@font/suite</item>
    </style>

    <style name="EditTextStyle" parend="@android:style/Widget.DeviceDefault">
        <item name="android:fontFamily">@font/suite</item>
    </style>


    <style name="Theme.MyBli" parent="Base.Theme.MyBli" />
</resources>